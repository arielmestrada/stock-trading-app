<h1>home page</h1>

<p>Stocks Stats goes here</p>

<% @users.each do |user| %>
    <div>
        <%= user.first_name %><br/>
        <%= user.last_name %><br/>
        <%= user.email %><br/>
        <% if user.confirmed? %>
            <%= 'approved' %>
        <% else %>
            <%= 'pending' %><br/>
            <%= link_to 'Approve Account?', confirm_user_path(user.id) %>
        <% end %>
        <%= link_to 'Show', user_path(user.id) %>
    </div><br/>    
<% end %>
