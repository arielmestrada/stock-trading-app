
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|  %>
  
<%= stylesheet_link_tag "home", "data-turbo-track": "reload" %>

<section class="vh-100 bg-light d-flex">
  <div class="container-fluid h-custom d-flex flex-column align-items-center justify-content-center">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form>
        
            <p class="text-warning text-center"><%= notice %></p>
            <p class="text-danger text-center"><%= alert %></p>   
              <%= render "devise/shared/error_messages", resource: resource %>
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">

            <p class="lead fw-normal mb-0 me-3">Resend Confirmation</p>
         
          </div>

          <div class="divider d-flex align-items-center my-4">
    <button type="button" class="btn btn-primary btn-floating mx-1">
             <i class="fa-solid fa-key fa-1x fa-flip"></i>
            </button>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4 d-flex justify-content-between">
             <!-- <input type="email" id="form3Example3" class="form-control form-control-lg"
              placeholder="Enter a valid email address" /> -->
  
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg w-75", placeholder:"Enter your email address here", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        
           
          </div>

              <%= f.submit 'send', class:'btn btn-primary btn-lg ' %>

          <div class="text-center text-lg-start mt-4 pt-2">        
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account?  <%= link_to 'Register', new_user_registration_path, class:'link-danger' %></p>
               <p class="small fw-bold mt-2 pt-1 mb-0">Already have an account?  <%= link_to 'Login', new_user_session_path, class:'link-danger' %></p>
          </div>
          
        </form>
      </div>
    </div>
  </div>
</section>
<% end %>

